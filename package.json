{
  "name": "sand-wallpaper",
  "version": "1.0.0",
  "description": "Live sand wallpaper (HTML/Canvas) with edit-in-AppData",
  "author": "You",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.sandwallpaper",
    "productName": "SandWallpaper",
    "asar": true,
    "files": ["main.js", "assets/**"],
    "win": { "target": "portable", "artifactName": "SandWallpaper.exe" }
  }
}
