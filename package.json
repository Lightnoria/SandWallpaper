{
  "name": "sand-wallpaper",
  "version": "1.0.0",
  "description": "Sand Wallpaper — интерактивные песчаные обои на Electron",
  "main": "main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w nsis",
    "dist:portable": "electron-builder -w portable",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.yourname.sandwallpaper",
    "productName": "SandWallpaper",
    "files": [
      "main.js",
      "index.html",
      "src/**/*"
    ],
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    }
  }
}
